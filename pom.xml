<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.example</groupId>
  <artifactId>my-antlr4-project</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>my-antlr4-project</name>
  <url>http://maven.apache.org</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.antlr</groupId>
      <artifactId>antlr4-runtime</artifactId>
      <version>4.12.0</version> <!-- Reemplaza con la versiÃ³n actual de ANTLR -->
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.antlr</groupId>
        <artifactId>antlr4-maven-plugin</artifactId>
        <!-- ... ANTLR4 Configuration ... -->
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version> <!-- Recent Version -->
        <configuration>
          <source>11</source> <!-- JDK Version -->
          <target>11</target> <!-- JDK Versio -->
          <compilerArgs>
            <arg>-Xlint:unchecked</arg>
          </compilerArgs>
          <annotationProcessorPaths>
            <path>
              <groupId>org.antlr</groupId>
              <artifactId>antlr4</artifactId>
              <version>4.12.0</version> <!-- ANTLR Version -->
            </path>
          </annotationProcessorPaths>
          <includes>
            <include>target/generated-sources/antlr4/**/*.java</include>
          </includes>
        </configuration>
      </plugin>
      <!-- ... Other Plugins ... -->
    </plugins>
  </build>




</project>
